datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Menu {
  id    Int    @id @default(autoincrement())
  nama  String
  harga Float
  waktu Int
  desc  String @db.Text
}

model User {
  id    Int    @id @default(autoincrement())
  username String
  email String
  password String
}

model Order {
  id        Int         @id @default(autoincrement())
  totalCash Float
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  orderId  Int
  menuId   Int
  nama     String
  harga    Float
  jumlah   Int
  Order    Order @relation(fields: [orderId], references: [id])

  @@index([orderId])
}